/* packA/pages/jssy/infoModel.wxml.wxss */
.model {
  position: fixed;
  z-index: 9999;
  background: rgb(255, 255, 255);
  top: 40%;
  left: 50%;
  width: 78%;
  margin: auto;
  padding: 0 15px 10px;
  transform: translateX(-50%);
  box-sizing: border-box;
  box-shadow: 3px 2px 10px 1px rgba(0, 0, 0, 0.2);
  border-radius: 5px;
}

.model .close {
  text-align: right;
  font-size: 30px;

}

.model .table {
  border: 1px solid rgb(0, 0, 0, 0.3);
  border-bottom: none;
}

.model .table .tr {
  display: flex;
  text-align: center;
  font-size: 18px;

}

.model .table .tr .label {
  flex: 1;
  border-right: 1px solid rgb(0, 0, 0, 0.3);
  border-bottom: 1px solid rgb(0, 0, 0, 0.3);

  padding: 5px 0;
}

.model .table .tr .value {
  flex: 1;
  padding: 5px 0;
  border-bottom: 1px solid rgb(0, 0, 0, 0.3);

}